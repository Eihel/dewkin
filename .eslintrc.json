{
	"extends": "wikimedia",
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"MemberExpression": "off",
				"SwitchCase": 1,
				"ignoredNodes": [ "FunctionExpression > *", "VariableDeclaration" ]
			}
		],
		"key-spacing": [ "error", { "mode": "minimum" } ],
		"valid-jsdoc": "off",
		"wrap-iife": "off"
	},
	"overrides": [
		{
			"files": "*.js",
			"excludedFiles": "Gruntfile.js",
			"env": {
				"browser": true,
				"jquery": true
			},
			"globals": {
				"L": false,
				"d3": false
			}
		}
	]
}
